    paper-scroll-header-panel(condenses)
      paper-toolbar.tall
        paper-tabs.bottom(selected='0')
          paper-tab Schedule
          paper-tab Standings
          paper-tab Roster
      .content
      each team in teams
        .game
          paper-material.header(elevation='0', animated)
            paper-icon-item
              .avatar(item-icon, class=team.icon)
              paper-item-body(two-line)
                div=team.name
                div(secondary)=team.date
              paper-icon-button.recap(icon='expand-more')
          paper-material.recap(elevation='0', animated, style='display: none;')
            paper-icon-item
              .avatar.letter.win(item-icon)
              | 3 - 1
            each period in team.recap.periods
              paper-material.subheader(elevation='0')=period.name
              each note in period.events
                paper-item
                  paper-item-body(two-line)
                    if note.type === 'Goal'
                      div Goal
                      div(secondary) #{note.scorer} - #{note.assists.join(' ')}
                    else
                      div #{note.penalty.type} (#{note.penalty.name})
                      div(secondary)=note.player
              