doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width', minimum-scale=1.0, initial-scale=1, user-scalable="yes")

    script(src='../../webcomponentsjs/webcomponents-lite.js')
    link(rel='import', href='./../paper-item/paper-item.html')
    link(rel='import', href='./../paper-item/paper-icon-item.html')
    link(rel='import', href='./../paper-item/paper-item-body.html')
    link(rel='import', href='./../paper-icon-button/paper-icon-button.html')
    link(rel='import' href='./../iron-icons/iron-icons.html')
    link(rel='import' href='./../iron-icons/editor-icons.html')

    link(rel='stylesheet', href='./stylesheets/all.css')
    link(rel='import', href='./elements/custom-paper-item.html')
    style(is='custom-style', include='shared-styles')
  body(unresolved)
    -
      teams = [
        {
          name: "Boozers",
          date: "Oct. 21st, 10:00PM",
          icon: "boozers"
        },
        {
          name: "Dragons",
          date: "Oct. 28th, 8:45PM",
          icon: "dragons"
        },
        {
          name: "Five Holers",
          date: "Nov. 4th, 10:00PM",
          icon: "five-holers"
        }
      ];
    each team in teams
      paper-icon-item
        .avatar(item-icon, class=team.icon)
        paper-item-body(two-line)
          div=team.name
          div(secondary)=team.date
        paper-icon-button(icon='editor:insert-chart')
